@model IEnumerable<MVC.Models.Customer>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<h2 class="mt-4 mb-3 text-center">Danh sách khách hàng</h2>

<style>
    /* Tùy chỉnh CSS cho bảng */
    .table th, .table td {
        vertical-align: middle; /* Canh giữa theo chiều dọc */
    }

    .btn-sm {
        margin: 0 2px; /* Thêm khoảng cách giữa các nút */
    }
</style>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Không có khách hàng nào trong hệ thống.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-primary">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info">Xem</a>
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
