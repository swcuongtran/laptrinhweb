@model IEnumerable<MVC.Models.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Customer.Name</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.OrderId })" class="btn btn-info btn-sm">Details</a>
                    <a href="#" onclick="updateStatus(@order.OrderId)" class="btn btn-warning btn-sm">Update Status</a>
                    <form asp-action="Delete" asp-controller="Order" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@order.OrderId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function updateStatus(orderId) {
        var status = prompt("Enter new status (0=Pending, 1=Shipped, 2=Delivered, 3=Canceled):");
        if (status !== null) {
            window.location.href = `/Order/UpdateStatus?id=${orderId}&status=${status}`;
        }
    }
</script>


