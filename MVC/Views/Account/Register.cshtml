@model MVC.Models.RegisterViewModel

<style>
    /* Màu sắc cho chữ "Đăng ký" */
    .text-custom {
        color:black; /* Màu đỏ cà chua */
    }

    /* Màu sắc cho chữ "Điều khoản sử dụng website" */
    .terms-text {
        font-size: 14px;
    }

    .text-primary {
        color: #007bff; /* Màu xanh da trời */
        font-weight: bold;
    }

    /* Tùy chỉnh cho biểu tượng và nút Đăng ký */
    button.btn-primary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px; /* Khoảng cách giữa biểu tượng và văn bản */
    }

        button.btn-primary i {
            font-size: 18px; /* Kích thước biểu tượng */
        }

        /* Thêm hiệu ứng hover cho nút Đăng ký */
        button.btn-primary:hover {
            background-color: #0056b3; /* Màu khi hover */
        }
</style>

<div class="container" style="max-width: 500px; margin-top: 50px;">
    <div class="card p-4" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <!-- Tiêu đề với màu sắc -->
        <h2 class="text-center mb-4 text-custom">Đăng ký</h2>

        <form asp-action="Register" method="post">
            <div class="form-group mb-4">
                <label asp-for="Username" class="d-block mb-2">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="d-block mb-2">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Address" class="d-block mb-2">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Phone" class="d-block mb-2">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="d-block mb-2">Mật khẩu</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="d-block mb-2">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-4">
                <input type="checkbox" class="form-check-input" id="termsCheck" required />
                <label class="form-check-label" for="termsCheck">
                    <span class="terms-text">Tôi đồng ý với <span class="text-primary">Điều khoản sử dụng website</span></span>
                </label>
            </div>

            <!-- Nút Đăng ký với biểu tượng -->
            <button type="submit" class="btn btn-primary btn-block">
                <i class="fas fa-user-plus"></i> Đăng ký
            </button>
        </form>

        <!-- Hiển thị các lỗi toàn cục -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-4">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
