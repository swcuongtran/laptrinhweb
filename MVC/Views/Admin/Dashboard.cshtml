@using System.Linq;

@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/stylekhai.css">
    <title>Admin Dashboard - Shoes Shop</title>
</head>
<body>
    <section id="sidebar">
        <a href="@Url.Action("Dashboard", "Admin")" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Admin Shoes Shop</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="@Url.Action("Dashboard", "Admin")">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                @Html.ActionLink("Quản lý Sản phẩm", "Index", "Product", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Quản lý Đơn hàng", "Index", "Order", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Quản lý Người dùng", "Index", "Customers", null, new { @class = "nav-link" })
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="@Url.Action("Logout", "Account")" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Tìm kiếm...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <h4>Xin chào, <span style="color: red;">Admin</span></h4>
        </nav>

        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Dashboard</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Dashboard</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Trang chủ</a>
                        </li>
                    </ul>
                </div>
            </div>

            <ul class="box-info">
                <li>
                    <i class='bx bxs-calendar-check'></i>
                    <span class="text">
                        <h3>@Model.RecentOrders.Count</h3>
                        <p>Đơn hàng mới</p>
                    </span>
                </li>
                <li>
                    <i class='bx bxs-group'></i>
                    <span class="text">
                        <h3>@Model.Products.Count</h3>
                        <p>Lượt truy cập</p>
                    </span>
                </li>
                <li>
                    <i class='bx bxs-dollar-circle'></i>
                    <span class="text">
                        <h3>2,543,000 VNĐ</h3>
                        <p>Doanh thu</p>
                    </span>
                </li>
            </ul>
        </main>
    </section>

    <script src="~/js/scriptkhai.js"></script>
</body>
</html>
