@{
    ViewData["Title"] = "Trang chủ";
    var products = ViewData["Products"] as IEnumerable<MVC.Models.Product>;
    var categories = ViewData["Categories"] as IEnumerable<MVC.Models.Category>;
    var searchQuery = ViewData["SearchQuery"] as string;
    var categoryId = ViewData["CategoryID"] as int?;
}

<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1 class="display-4">Chào mừng bạn đến với WaterOrderApp!</h1>
        <p class="lead">Lựa chọn đồ uống yêu thích của bạn từ menu đa dạng của chúng tôi!</p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="/Product/Index" role="button">Xem Sản Phẩm</a>
    </div>

    <!-- Thanh tìm kiếm và lọc theo danh mục -->
    <div class="row">
        <div class="col-md-4">
            <form method="get" asp-action="Index">
                <input type="text" name="search" placeholder="Tìm kiếm sản phẩm..." value="@searchQuery" class="form-control mb-2" />
                @Html.DropDownList("categoryID", new SelectList(categories, "CategoryId", "Name", categoryId), "Tất cả danh mục", new { @class = "form-control mb-2" })

                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>
        </div>

        <!-- Hiển thị sản phẩm tìm kiếm -->
        <div class="row mt-5">
            <h2>Sản phẩm tìm kiếm</h2>
            <div class="col-12">
                <div class="row">
                    @if (!string.IsNullOrEmpty(searchQuery) || categoryId.HasValue) // Chỉ hiển thị nếu có tìm kiếm hoặc lọc theo danh mục
                    {
                        @if (products != null && products.Any())
                        {
                            @foreach (var product in products)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">@product.Name</h5>
                                            <p class="card-text">@product.Description</p>
                                            <p class="card-text"><strong>Giá:</strong> @product.Price.ToString("C")</p>
                                            <a href="/Products/Details/@product.ProductId" class="btn btn-primary">Chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>Không có sản phẩm nào được tìm thấy.</p>
                        }
                    }
                    else
                    {
                        <p>Vui lòng nhập từ khóa để tìm kiếm hoặc chọn danh mục.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Hiển thị sản phẩm nổi bật (không có tìm kiếm) -->
    <div class="row mt-5">
        <h2>Sản phẩm nổi bật</h2>
        <div class="col-12">
            <div class="row">
                @if (products != null && products.Any())
                {
                    @foreach (var product in products)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="card-text"><strong>Giá:</strong> @product.Price.ToString("C")</p>
                                    <a href="/Products/Details/@product.ProductId" class="btn btn-primary">Chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Không có sản phẩm nổi bật.</p>
                }
            </div>
        </div>
    </div>
</div>
