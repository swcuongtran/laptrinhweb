@model MVC.DTOs.UserProfileDTO
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin tài khoản</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Customer.Name</h5>
        <p class="card-text">Email: @Model.Customer.Email</p>
        <p class="card-text">Địa chỉ: @Model.Customer.Address</p>
        <p class="card-text">Số điện thoại: @Model.Customer.Phone</p>

        <!-- Nút Cập nhật thông tin -->
        <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-primary">Cập nhật thông tin</a>
    </div>
</div>
<a href="@Url.Action("ChangePassword", "Account")" class="btn btn-warning">Đổi Mật Khẩu</a>
<h3>Lịch sử đơn hàng</h3>
@if (Model.OrderHistory.Any())
{
    <ul class="list-group">
        @foreach (var order in Model.OrderHistory)
        {
            <li class="list-group-item">
                <strong>Đơn hàng số:</strong> @order.OrderId -
                <strong>Ngày đặt:</strong> @order.OrderDate.ToString("dd/MM/yyyy")
            </li>
        }
    </ul>
}
else
{
    <p>Không có đơn hàng nào.</p>
}



