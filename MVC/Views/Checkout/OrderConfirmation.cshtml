@model Order
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}
<h2>Đơn hàng của bạn đã được đặt thành công</h2>

<p>Mã đơn hàng: @Model.OrderId</p>
<p>Ngày đặt: @Model.OrderDate.ToShortDateString()</p>
<p>Tổng tiền: @Model.TotalAmount.ToString("C")</p>
<p>Trạng thái: @Model.Status</p>

<h3>Chi tiết đơn hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>