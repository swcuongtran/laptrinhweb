@using System.Linq;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/stylekhai.css">
    <title>@ViewData["Title"] - Admin Dashboard</title>
</head>
<body>
    <section id="sidebar">
        <a href="@Url.Action("Dashboard", "Admin")" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Admin Shoes Shop</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="@Url.Action("Dashboard", "Admin")">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                @Html.ActionLink("Quản lý Sản phẩm", "Index", "Product", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Quản lý Đơn hàng", "Index", "Order", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Quản lý Người dùng", "Index", "Customers", null, new { @class = "nav-link" })
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="@Url.Action("Logout", "Account")" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Tìm kiếm...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <h4>Xin chào, <span style="color: red;">Admin</span></h4>
        </nav>

        <main>
            @RenderBody() <!-- Chèn nội dung view cụ thể -->
        </main>
    </section>
    @RenderSection("Scripts", required: false)
    <script src="~/js/scriptkhai.js"></script>
</body>
</html>
